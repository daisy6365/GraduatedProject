<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <data>
        <variable name="viewModel" type="com.example.graduatedproject.viewmodel.UserViewModel"/>
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        >

        <ImageView
            android:id="@+id/edit_profile_img"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/profile_init"
            android:background="@drawable/imageview_corner"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/change_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:padding="7dp"
                android:background="@drawable/background_btn_green"
                android:text="사진 가져오기"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/change_default"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:background="@drawable/background_btn_green"
                android:text="기본 이미지"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textSize="13dp" />

        </LinearLayout>


        <EditText
            android:id="@+id/edit_profile_name"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:hint="init"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            >

            <TextView
                android:id="@+id/edit_profile_cancel"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:background="@drawable/background_button"
                android:text = "취소"
                android:gravity="center"
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/edit_profile_apply"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:background="@drawable/background_btn_green"
                android:text = "완료"
                android:gravity="center"
                android:textColor="@color/colorWhite" />

        </LinearLayout>
    </LinearLayout>

</layout>
