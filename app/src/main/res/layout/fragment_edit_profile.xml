<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    >

        <ImageView
            android:id="@+id/edit_profile_img"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/profile_init"
            />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/change_img"
            android:text="사진 가져오기"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            />

        <Button
            android:id="@+id/change_default"
            android:text="기본 이미지"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"/>
    </LinearLayout>





    <EditText
        android:id="@+id/edit_profile_name"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:hint="init"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/edit_profile_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "취소"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="25dp"
            />

        <Button
            android:id="@+id/edit_profile_apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "완료"
            android:layout_marginRight="25dp"
            />

    </LinearLayout>



</LinearLayout>