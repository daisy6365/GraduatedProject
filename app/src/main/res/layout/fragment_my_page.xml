<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.MyPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/my_page_profile"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:src="@drawable/profile_init"
            android:layout_margin="10dp"
            android:layout_weight="2"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="10dp"
            >

            <Button
                android:id="@+id/my_page_apply_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="스터디 가입 내역"
                android:textSize="10dp"
                android:background="#E0E0E0"
                />
            <TextView
                android:id="@+id/my_page_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="한다빈"
                android:textSize="20dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/my_page_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="인천 남동구 구월동"
                android:textSize="20dp"

                />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.1"
        >

        <Button
            android:id="@+id/my_page_friends_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="친구목록"
            android:textSize="20dp"
            android:background="#E0E0E0"
            />
        <Button
            android:id="@+id/my_page_likes_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="관심주제 수정"
            android:textSize="20dp"
            android:background="#E0E0E0"
            />
        <Button
            android:id="@+id/my_page_place_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="동네정보 수정"
            android:textSize="20dp"

            />
        <Button
            android:id="@+id/my_page_logout_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="로그아웃"
            android:textSize="20dp"
            />
        <Button
            android:id="@+id/my_page_delete_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="회원탈퇴"
            android:textSize="20dp"
            />

    </LinearLayout>
</LinearLayout>